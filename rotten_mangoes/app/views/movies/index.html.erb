 <head>
  <title>Rotten Mangoes</title>
</head>
<body>
  <!-- When submit the form, the view rendered will be the index view of our articles resource -->
  <%= form_tag(movies_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Movies" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <%= text_field_tag :run_time, params[:run_time], placeholder: "Search Run Time" %>
    
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>
</body>

  <%= link_to "Submit a movie!", new_movie_path %>
  <%= link_to "Back full movies list", movies_path %>
  <hr>
  <% @movies.each do |movie| %>
    <%= image_tag movie.image_url(:thumb) if movie.image? %>
    <h2><%= link_to movie.title, movie_path(movie) %></h2>
    <h3><%= movie.release_date %></h3>
    <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
    <p><%= movie.description %></p>
    <%= movie.review_average %>/10
    <hr>
  <% end %>


