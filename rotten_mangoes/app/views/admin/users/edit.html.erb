<h1>Admin: Edit User</h1>
<%= form_for ([:admin, @user]) do |f| %>
   <% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %> prevented the account from being created:
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label "email" %><br>
    <%= f.text_field "email", :class => "form-control" %>
  </div>
  <div>
    <%= f.label "firstname", "First Name" %><br>
    <%= f.text_field "firstname", :class => "form-control" %>
  </div>
  <div>
    <%= f.label "lastname", "Last Name" %><br>
    <%= f.text_field "lastname", :class => "form-control" %>
  </div>
  <div>
    <%= f.check_box :admin %>
    <%= f.label "Make Admin" %><br>
  </div>

  <div>
    <%= f.submit "Submit" %>
  </div>

  <%= link_to "Back to users", admin_users_path %>
<% end %>