<h2>All Users:</h2><br/>
<%= link_to 'Back to movies', root_path %><br/>
<%= link_to 'Create a new user', new_admin_user_path %><br/>

<% @users.each do |user| %>
    <tr>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.email %></td>
    <td><%= user.admin %></td>

    <h3><%= user.full_name %> | <%= user.email %>
    <% if user.admin? %>
      * Administrator
    <% else %>
      * Regular User
    <% end %>
     * <%= link_to "see user details", admin_user_path(user) %>
    </h3>
  <% end %>